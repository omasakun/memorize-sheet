{
    "compilerOptions": {
        "module": "es6",
        "target": "es2015",
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "docs/js",
        "rootDir": "src/ts",
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "strictPropertyInitialization": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}